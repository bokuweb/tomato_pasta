.side-menu
  background #2980B9
  width 280px
  height 100%
  flex 0 280px
  box-flex 0
  padding 0
  font-size 14px
  overflow-y auto
  scrollbar-face-color accent-color
  scrollbar-track-color rgba(0, 0, 0, .1)

  .side-menu__logo
    width 160px
    height auto
    margin 15px auto 0 60px

.side-menu::-webkit-scrollbar
  width 6px
  height 6px

.side-menu::-webkit-scrollbar-thumb
  background rgba(0, 0, 0, 0.4)
  border-radius 2px

@media screen and (max-width: 768px)
  .side-menu
    position fixed
    transition  all .4s ease
    z-index 1000
    padding 40px 0 0 0

    .side-menu__logo
      display none

  .side-menu__close
    left -800px
    top 0

  .side-menu__open
    top 0
    left 0px