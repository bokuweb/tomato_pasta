.item
  min-height 160px
  max-width 800px
  padding 20px 0 0 0
  border-bottom solid 1px #DDD

  .item__favicon
    margin 0 8px -2px 0

  .item__image--hatebu
    margin 0px 0 -2px 5px

  .item__title
    line-height 28px
    font-size 95%
    padding 0 0 3px
    color #34495E
    transition  all .4s ease

  .item__title:hover
    color #2980B9

  .item__publish-date
    margin 5px 0 0 0
    font-size 10px
    color #95A5A6

  .item__category
   font-size 11px
   background #16A085
   padding 3px
   border-radius 2px
   line-height 11px
   color #fff
   font-weight bold
   display inline-block
   text-shadow none
   margin 0 0 0 10px

  .item__content-snippet
    color #7F8C8D
    font-size 90%
    padding 10px 0 10px 0
    //border-bottom solid 1px #DDD
    line-height 20px
    word-break break-all

  .item__button--comment
    margin 0 0 25px 10px
    font-size 11px
    cursor pointer
    transition  all .4s ease
    display inline-block
    border-radius 3px
    background #ECF0F1
    text-shadow none
    padding 3px 10px
    > i
      margin 0 12px 0 0
  
  .item__button--comment:hover
    color #E74C3C

  .item__button--favorite
    margin 0 0 25px 0
    font-size 11px
    cursor pointer
    transition  all .4s ease
    display inline-block
    border-radius 3px
    background #ECF0F1
    text-shadow none
    padding 3px 10px
    > i
      margin 0 12px 0 0
  
  .item__button--favorite:hover
    color #E74C3C
  
  .item__button--favorited
    color #E74C3C

@media screen and (max-width: 768px)
  .item
    min-height 130px
    max-width 100%
    padding 10px 5px 10px 5px
    border-bottom solid 1px #DDD

  .item__content-snippet
    //display none
    overflow hidden
    white-space nowrap
    text-overflow ellipsis

  .item__button--favorite
    margin 10px 10px 10px 0
    font-size 11px
    cursor pointer
    transition  all .4s ease
    display inline-block
    > i
      margin 0 10px 0 0

  .item__button--comment
    margin 10px 0 10px 
    font-size 11px
    cursor pointer
    transition  all .4s ease
    display inline-block
    > i
      margin 0 10px 0 0

  .item__publish-date
    margin 0 0 20px 0