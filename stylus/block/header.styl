@media screen and (max-width: 768px)
  .header
    display block
    position fixed
    height 48px
    width 100%
    border-bottom solid 1px #ddd
    background #f5f5f5
    top 0
    left 0
    z-index 999

    .header__logo
      height 52px
      width auto
      display block
      margin 0 auto

    .header__button--menu
      position absolute
      top 16px
      left calc(100% - 30px)

@media screen and (min-width: 769px)
  .header
    display none
