.bookmarkslider
  width 100%
  margin 0 auto
  position relative
  padding 15px 0 0 0

  > div[name="bookmarkslider"]
    width 70%
    margin 0 0 0 15%

  .bookmarkslider__count
    background #34495E
    color #f5f5f5
    padding 8px
    width 40px
    position absolute
    top 0
    left 10px
    border-radius 4px
    text-align center
    vertical-align middle

    i.bookmarkslider__icon
      color #f5f5f5
      margin 0 2px -2px 0
      display inline-block

  .bookmarkslider__count:after
    content ''
    position absolute
    border-top 10px solid #34495E
    border-right 5px solid transparent
    border-left 5px solid transparent
    bottom -9px
    left 20px
