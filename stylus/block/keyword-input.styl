.keyword-input
  margin 0 0 46px 20px
  display -webkit-flex
  display flex
  -webkit-flex-direction row
  flex-direction         row

  .keyword-input__input
    border 0
    border solid 1px #2C3E50
    background #34495E
    opacity 0.9
    padding 0 10px
    color #f5f5f5
    border-radius 3px
    margin 0 5px 0 0
    -moz-box-shadow inset 0 0 4px rgba(0,0,0,0.1)
    -webkit-box-shadow inset 0 0 4px rgba(0, 0, 0, 0.1)
    box-shadow inner 0 0 4px rgba(0, 0, 0, 0.1)
    height 26px
    line-height 26px
    font-size 14px
    width 140px